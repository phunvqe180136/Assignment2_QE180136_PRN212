<Window x:Class="StudentNameWPF.Views.CustomerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Customer Information" 
        Height="500" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Form -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="Customer Information" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Foreground="#2E86AB"
                       Margin="0,0,0,20"/>
            
            <!-- Full Name -->
            <Label Content="Full Name *" Margin="0,0,0,5"/>
            <TextBox x:Name="FullNameTextBox" 
                     Margin="0,0,0,15"
                     Padding="5"/>
            
            <!-- Email -->
            <Label Content="Email Address *" Margin="0,0,0,5"/>
            <TextBox x:Name="EmailTextBox" 
                     Margin="0,0,0,15"
                     Padding="5"/>
            
            <!-- Telephone -->
            <Label Content="Telephone *" Margin="0,0,0,5"/>
            <TextBox x:Name="TelephoneTextBox" 
                     Margin="0,0,0,15"
                     Padding="5"/>
            
            <!-- Birthday -->
            <Label Content="Birthday *" Margin="0,0,0,5"/>
            <DatePicker x:Name="BirthdayDatePicker" 
                        Margin="0,0,0,15"/>
            
            <!-- Password -->
            <Label Content="Password *" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" 
                         Margin="0,0,0,15"
                         Padding="5"/>
            
            <!-- Status -->
            <Label Content="Status" Margin="0,0,0,5"/>
            <ComboBox x:Name="StatusComboBox" 
                      Margin="0,0,0,20">
                <ComboBoxItem Content="Active" Tag="1" IsSelected="True"/>
                <ComboBoxItem Content="Inactive" Tag="2"/>
            </ComboBox>
            
            <!-- Error Message -->
            <TextBlock x:Name="ErrorMessageText" 
                       Foreground="Red" 
                       FontSize="12"
                       TextWrapping="Wrap"
                       Margin="0,0,0,10"
                       Visibility="Collapsed"/>
        </StackPanel>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" 
                    Click="CancelButton_Click"
                    Margin="0,0,10,0"
                    Padding="15,5"
                    Background="LightGray"/>
            <Button Content="Save" 
                    Click="SaveButton_Click"
                    Padding="15,5"
                    Background="#2E86AB"
                    Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
