<Window x:Class="StudentNameWPF.Views.BookingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Booking" 
        Height="500" 
        Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Form -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="Create New Booking" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Foreground="#2E86AB"
                       Margin="0,0,0,20"/>
            
            <!-- Room Selection -->
            <Label Content="Select Room *" Margin="0,0,0,5"/>
            <ComboBox x:Name="RoomComboBox" 
                      DisplayMemberPath="RoomNumber"
                      Margin="0,0,0,15"/>
            
            <!-- Check In Date -->
            <Label Content="Check In Date *" Margin="0,0,0,5"/>
            <DatePicker x:Name="CheckInDatePicker" 
                        Margin="0,0,0,15"/>
            
            <!-- Check Out Date -->
            <Label Content="Check Out Date *" Margin="0,0,0,5"/>
            <DatePicker x:Name="CheckOutDatePicker" 
                        Margin="0,0,0,15"/>
            
            <!-- Total Amount -->
            <Label Content="Total Amount *" Margin="0,0,0,5"/>
            <TextBox x:Name="TotalAmountTextBox" 
                     IsReadOnly="True"
                     Margin="0,0,0,15"
                     Padding="5"/>
            
            <!-- Booking Status -->
            <Label Content="Booking Status" Margin="0,0,0,5"/>
            <ComboBox x:Name="StatusComboBox" 
                      Margin="0,0,0,20">
                <ComboBoxItem Content="Pending" IsSelected="True"/>
                <ComboBoxItem Content="Confirmed"/>
                <ComboBoxItem Content="Cancelled"/>
            </ComboBox>
            
            <!-- Error Message -->
            <TextBlock x:Name="ErrorMessageText" 
                       Foreground="Red" 
                       FontSize="12"
                       TextWrapping="Wrap"
                       Margin="0,0,0,10"
                       Visibility="Collapsed"/>
        </StackPanel>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" 
                    Click="CancelButton_Click"
                    Margin="0,0,10,0"
                    Padding="15,5"
                    Background="LightGray"/>
            <Button Content="Create Booking" 
                    Click="SaveButton_Click"
                    Padding="15,5"
                    Background="#2E86AB"
                    Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
