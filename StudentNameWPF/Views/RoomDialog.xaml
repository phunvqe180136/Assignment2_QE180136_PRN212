<Window x:Class="StudentNameWPF.Views.RoomDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Room Information" 
        Height="600" 
        Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Form -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="Room Information" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Foreground="#2E86AB"
                       Margin="0,0,0,20"/>
            
            <!-- Room Number -->
            <Label Content="Room Number *" Margin="0,0,0,5"/>
            <TextBox x:Name="RoomNumberTextBox" 
                     Margin="0,0,0,15"
                     Padding="5"/>
            
            <!-- Room Description -->
            <Label Content="Room Description *" Margin="0,0,0,5"/>
            <TextBox x:Name="DescriptionTextBox" 
                     Height="60"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     Margin="0,0,0,15"
                     Padding="5"/>
            
            <!-- Max Capacity -->
            <Label Content="Max Capacity *" Margin="0,0,0,5"/>
            <TextBox x:Name="MaxCapacityTextBox" 
                     Margin="0,0,0,15"
                     Padding="5"/>
            
            <!-- Price Per Date -->
            <Label Content="Price Per Date *" Margin="0,0,0,5"/>
            <TextBox x:Name="PriceTextBox" 
                     Margin="0,0,0,15"
                     Padding="5"/>
            
            <!-- Room Type -->
            <Label Content="Room Type *" Margin="0,0,0,5"/>
            <ComboBox x:Name="RoomTypeComboBox" 
                      DisplayMemberPath="RoomTypeName"
                      Margin="0,0,0,15"/>
            
            <!-- Status -->
            <Label Content="Status" Margin="0,0,0,5"/>
            <ComboBox x:Name="StatusComboBox" 
                      Margin="0,0,0,20">
                <ComboBoxItem Content="Active" Tag="1" IsSelected="True"/>
                <ComboBoxItem Content="Inactive" Tag="2"/>
            </ComboBox>
            
            <!-- Error Message -->
            <TextBlock x:Name="ErrorMessageText" 
                       Foreground="Red" 
                       FontSize="12"
                       TextWrapping="Wrap"
                       Margin="0,0,0,10"
                       Visibility="Collapsed"/>
        </StackPanel>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" 
                    Click="CancelButton_Click"
                    Margin="0,0,10,0"
                    Padding="15,5"
                    Background="LightGray"/>
            <Button Content="Save" 
                    Click="SaveButton_Click"
                    Padding="15,5"
                    Background="#2E86AB"
                    Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
