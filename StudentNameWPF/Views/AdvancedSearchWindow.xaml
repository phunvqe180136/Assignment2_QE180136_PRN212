<Window x:Class="StudentNameWPF.Views.AdvancedSearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Advanced Search" 
        Height="700" 
        Width="900"
        Style="{StaticResource ModernWindowStyle}"
        WindowStartupLocation="CenterOwner">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="ðŸ” Advanced Search" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="{StaticResource PrimaryColor}"/>
            <TextBlock Text="Search across all data with advanced filters" 
                       FontSize="14" 
                       Foreground="{StaticResource TextColor}" 
                       Opacity="0.7"/>
        </StackPanel>
        
        <!-- Search Options -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Search Criteria -->
            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                <TextBlock Text="Search Criteria" 
                           FontSize="16" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,15"/>
                
                <Label Content="Search Term" Style="{StaticResource ModernLabelStyle}"/>
                <TextBox x:Name="SearchTermTextBox" 
                         Style="{StaticResource ModernTextBoxStyle}" 
                         Margin="0,0,0,15"/>
                
                <Label Content="Search In" Style="{StaticResource ModernLabelStyle}"/>
                <CheckBox x:Name="SearchCustomersCheckBox" 
                          Content="Customers" 
                          IsChecked="True" 
                          Margin="0,0,0,5"/>
                <CheckBox x:Name="SearchRoomsCheckBox" 
                          Content="Rooms" 
                          IsChecked="True" 
                          Margin="0,0,0,5"/>
                <CheckBox x:Name="SearchBookingsCheckBox" 
                          Content="Bookings" 
                          IsChecked="True" 
                          Margin="0,0,0,15"/>
                
                <Label Content="Date Range" Style="{StaticResource ModernLabelStyle}"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <Label Content="From" Style="{StaticResource ModernLabelStyle}"/>
                        <DatePicker x:Name="FromDatePicker"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <Label Content="To" Style="{StaticResource ModernLabelStyle}"/>
                        <DatePicker x:Name="ToDatePicker"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
            
            <!-- Filters -->
            <StackPanel Grid.Column="1">
                <TextBlock Text="Advanced Filters" 
                           FontSize="16" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,15"/>
                
                <Label Content="Customer Status" Style="{StaticResource ModernLabelStyle}"/>
                <ComboBox x:Name="CustomerStatusComboBox" 
                          Style="{StaticResource ModernComboBoxStyle}" 
                          Margin="0,0,0,15">
                    <ComboBoxItem Content="All" IsSelected="True"/>
                    <ComboBoxItem Content="Active"/>
                    <ComboBoxItem Content="Inactive"/>
                </ComboBox>
                
                <Label Content="Room Type" Style="{StaticResource ModernLabelStyle}"/>
                <ComboBox x:Name="RoomTypeComboBox" 
                          Style="{StaticResource ModernComboBoxStyle}" 
                          Margin="0,0,0,15"/>
                
                <Label Content="Booking Status" Style="{StaticResource ModernLabelStyle}"/>
                <ComboBox x:Name="BookingStatusComboBox" 
                          Style="{StaticResource ModernComboBoxStyle}" 
                          Margin="0,0,0,15">
                    <ComboBoxItem Content="All" IsSelected="True"/>
                    <ComboBoxItem Content="Confirmed"/>
                    <ComboBoxItem Content="Cancelled"/>
                    <ComboBoxItem Content="Completed"/>
                </ComboBox>
                
                <Label Content="Price Range" Style="{StaticResource ModernLabelStyle}"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <Label Content="Min Price" Style="{StaticResource ModernLabelStyle}"/>
                        <TextBox x:Name="MinPriceTextBox" 
                                 Style="{StaticResource ModernTextBoxStyle}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <Label Content="Max Price" Style="{StaticResource ModernLabelStyle}"/>
                        <TextBox x:Name="MaxPriceTextBox" 
                                 Style="{StaticResource ModernTextBoxStyle}"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Grid>
        
        <!-- Results -->
        <Border Grid.Row="2" 
                Background="{StaticResource SurfaceColor}" 
                CornerRadius="8" 
                Padding="20" 
                Margin="0,20,0,0"
                Effect="{StaticResource CardShadow}">
            <StackPanel>
                <TextBlock Text="Search Results" 
                           FontSize="16" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,15"/>
                
                <DataGrid x:Name="SearchResultsGrid" 
                          AutoGenerateColumns="True" 
                          CanUserAddRows="False" 
                          CanUserDeleteRows="False"
                          IsReadOnly="True"
                          Height="200"/>
                
                <TextBlock x:Name="ResultsCountText" 
                           FontSize="12" 
                           Foreground="{StaticResource TextColor}" 
                           Opacity="0.7" 
                           Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Content="Clear" 
                    Click="ClearButton_Click" 
                    Style="{StaticResource SecondaryButtonStyle}" 
                    Margin="0,0,10,0"/>
            <Button Content="Search" 
                    Click="SearchButton_Click" 
                    Style="{StaticResource PrimaryButtonStyle}" 
                    Margin="0,0,10,0"/>
            <Button Content="Export Results" 
                    Click="ExportResultsButton_Click" 
                    Style="{StaticResource SecondaryButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>
