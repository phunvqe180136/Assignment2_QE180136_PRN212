<Window x:Class="StudentNameWPF.Views.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FUMiniHotelSystem - Dashboard" 
        Height="800" 
        Width="1400"
        Style="{StaticResource ModernWindowStyle}"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryColor}" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="ðŸ“Š Dashboard Overview" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock Text="Hotel Management Analytics" 
                               FontSize="14" 
                               Foreground="White" 
                               Opacity="0.9"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="Last Updated: " 
                               Foreground="White" 
                               VerticalAlignment="Center" 
                               Margin="0,0,5,0"/>
                    <TextBlock x:Name="LastUpdatedText" 
                               Foreground="White" 
                               FontWeight="SemiBold" 
                               VerticalAlignment="Center" 
                               Margin="0,0,20,0"/>
                    <Button Content="Refresh" 
                            Background="Transparent" 
                            Foreground="White" 
                            BorderBrush="White" 
                            BorderThickness="1"
                            Padding="15,5"
                            Click="RefreshButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" Margin="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Statistics Cards -->
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Total Customers Card -->
                    <Border Grid.Column="0" 
                            Background="{StaticResource SurfaceColor}" 
                            CornerRadius="8" 
                            Padding="20" 
                            Margin="0,0,10,0"
                            Effect="{StaticResource CardShadow}">
                        <StackPanel>
                            <TextBlock Text="ðŸ‘¥" FontSize="24" HorizontalAlignment="Center"/>
                            <TextBlock Text="Total Customers" 
                                       FontSize="12" 
                                       Foreground="{StaticResource TextColor}" 
                                       Opacity="0.7" 
                                       HorizontalAlignment="Center"/>
                            <TextBlock x:Name="TotalCustomersText" 
                                       Text="0" 
                                       FontSize="24" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource PrimaryColor}" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Total Rooms Card -->
                    <Border Grid.Column="1" 
                            Background="{StaticResource SurfaceColor}" 
                            CornerRadius="8" 
                            Padding="20" 
                            Margin="5,0"
                            Effect="{StaticResource CardShadow}">
                        <StackPanel>
                            <TextBlock Text="ðŸ¨" FontSize="24" HorizontalAlignment="Center"/>
                            <TextBlock Text="Total Rooms" 
                                       FontSize="12" 
                                       Foreground="{StaticResource TextColor}" 
                                       Opacity="0.7" 
                                       HorizontalAlignment="Center"/>
                            <TextBlock x:Name="TotalRoomsText" 
                                       Text="0" 
                                       FontSize="24" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource SecondaryColor}" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Active Bookings Card -->
                    <Border Grid.Column="2" 
                            Background="{StaticResource SurfaceColor}" 
                            CornerRadius="8" 
                            Padding="20" 
                            Margin="5,0"
                            Effect="{StaticResource CardShadow}">
                        <StackPanel>
                            <TextBlock Text="ðŸ“…" FontSize="24" HorizontalAlignment="Center"/>
                            <TextBlock Text="Active Bookings" 
                                       FontSize="12" 
                                       Foreground="{StaticResource TextColor}" 
                                       Opacity="0.7" 
                                       HorizontalAlignment="Center"/>
                            <TextBlock x:Name="ActiveBookingsText" 
                                       Text="0" 
                                       FontSize="24" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource AccentColor}" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Revenue Card -->
                    <Border Grid.Column="3" 
                            Background="{StaticResource SurfaceColor}" 
                            CornerRadius="8" 
                            Padding="20" 
                            Margin="10,0,0,0"
                            Effect="{StaticResource CardShadow}">
                        <StackPanel>
                            <TextBlock Text="ðŸ’°" FontSize="24" HorizontalAlignment="Center"/>
                            <TextBlock Text="Monthly Revenue" 
                                       FontSize="12" 
                                       Foreground="{StaticResource TextColor}" 
                                       Opacity="0.7" 
                                       HorizontalAlignment="Center"/>
                            <TextBlock x:Name="MonthlyRevenueText" 
                                       Text="$0" 
                                       FontSize="24" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource SuccessColor}" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>
                
                <!-- Charts Section -->
                <Grid Grid.Row="1" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Room Occupancy Chart -->
                    <Border Grid.Column="0" 
                            Background="{StaticResource SurfaceColor}" 
                            CornerRadius="8" 
                            Padding="20" 
                            Margin="0,0,10,0"
                            Effect="{StaticResource CardShadow}">
                        <StackPanel>
                            <TextBlock Text="ðŸ“Š Room Occupancy Rate" 
                                       FontSize="16" 
                                       FontWeight="SemiBold" 
                                       Foreground="{StaticResource TextColor}" 
                                       Margin="0,0,0,15"/>
                            <Grid Height="200">
                                <TextBlock x:Name="OccupancyRateText" 
                                           Text="0%" 
                                           FontSize="48" 
                                           FontWeight="Bold" 
                                           Foreground="{StaticResource PrimaryColor}" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Grid>
                            <TextBlock Text="Based on current bookings" 
                                       FontSize="12" 
                                       Foreground="{StaticResource TextColor}" 
                                       Opacity="0.7" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Booking Trends Chart -->
                    <Border Grid.Column="1" 
                            Background="{StaticResource SurfaceColor}" 
                            CornerRadius="8" 
                            Padding="20" 
                            Margin="10,0,0,0"
                            Effect="{StaticResource CardShadow}">
                        <StackPanel>
                            <TextBlock Text="ðŸ“ˆ Booking Trends" 
                                       FontSize="16" 
                                       FontWeight="SemiBold" 
                                       Foreground="{StaticResource TextColor}" 
                                       Margin="0,0,0,15"/>
                            <Grid Height="200">
                                <TextBlock x:Name="TrendText" 
                                           Text="+0%" 
                                           FontSize="48" 
                                           FontWeight="Bold" 
                                           Foreground="{StaticResource SuccessColor}" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Grid>
                            <TextBlock Text="Compared to last month" 
                                       FontSize="12" 
                                       Foreground="{StaticResource TextColor}" 
                                       Opacity="0.7" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>
                
                <!-- Recent Activities -->
                <Border Grid.Row="2" 
                        Background="{StaticResource SurfaceColor}" 
                        CornerRadius="8" 
                        Padding="20"
                        Effect="{StaticResource CardShadow}">
                    <StackPanel>
                        <TextBlock Text="ðŸ•’ Recent Activities" 
                                   FontSize="16" 
                                   FontWeight="SemiBold" 
                                   Foreground="{StaticResource TextColor}" 
                                   Margin="0,0,0,15"/>
                        <DataGrid x:Name="RecentActivitiesGrid" 
                                  AutoGenerateColumns="False" 
                                  CanUserAddRows="False" 
                                  CanUserDeleteRows="False"
                                  IsReadOnly="True"
                                  Height="200">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Time" Binding="{Binding Time}" Width="100"/>
                                <DataGridTextColumn Header="Activity" Binding="{Binding Activity}" Width="*"/>
                                <DataGridTextColumn Header="User" Binding="{Binding User}" Width="150"/>
                                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
