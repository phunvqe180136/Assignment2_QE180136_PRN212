<Window x:Class="StudentNameWPF.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FUMiniHotelSystem - Login" 
        Height="800" 
        Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Grid>
        <!-- Background with modern gradient -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#667eea" Offset="0"/>
                <GradientStop Color="#764ba2" Offset="0.5"/>
                <GradientStop Color="#f093fb" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Decorative elements -->
        <Ellipse Width="200" Height="200" Fill="#FFFFFF" Opacity="0.1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,100,0,0"/>
        <Ellipse Width="150" Height="150" Fill="#FFFFFF" Opacity="0.08" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,80,150"/>
        <Ellipse Width="100" Height="100" Fill="#FFFFFF" Opacity="0.12" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,200,200,0"/>

        <!-- Main login card -->
        <Border Background="White" 
                CornerRadius="20" 
                Margin="100,0,100,0" 
                Padding="50"
                MaxWidth="700"
                VerticalAlignment="Center" Height="681">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.15" BlurRadius="30" ShadowDepth="10"/>
            </Border.Effect>

            <StackPanel>
                <!-- Logo/Title Section -->
                <StackPanel HorizontalAlignment="Center" Margin="0,0,0,40">
                    <Border Background="#667eea" 
                            CornerRadius="50" 
                            Width="80" 
                            Height="80" 
                            HorizontalAlignment="Center" 
                            Margin="0,0,0,20">
                        <TextBlock Text="🏨" 
                                   FontSize="40" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>
                    </Border>

                    <TextBlock Text="FUMiniHotelSystem" 
                               FontSize="32" 
                               FontWeight="Bold" 
                               Foreground="#2D3748"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,8"/>

                    <TextBlock Text="Professional Hotel Management Solution" 
                               FontSize="16" 
                               Foreground="#718096"
                               HorizontalAlignment="Center"
                               FontWeight="Medium"/>
                </StackPanel>

                <!-- Login Form -->
                <StackPanel>
                    <!-- Email Section -->
                    <StackPanel Margin="0,0,0,20">
                        <Label Content="Email Address" 
                               FontSize="14" 
                               FontWeight="SemiBold" 
                               Foreground="#2D3748"
                               Margin="0,0,0,8"/>
                        <Border Background="#F7FAFC" 
                                CornerRadius="12" 
                                BorderBrush="#E2E8F0" 
                                BorderThickness="1"
                                x:Name="EmailBorder">
                            <TextBox x:Name="EmailTextBox" 
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Padding="16,12"
                                     FontSize="16"
                                     Foreground="#2D3748"
                                     ToolTip="Nhập địa chỉ email của bạn"/>
                        </Border>
                    </StackPanel>

                    <!-- Password Section -->
                    <StackPanel Margin="0,0,0,25">
                        <Label Content="Password" 
                               FontSize="14" 
                               FontWeight="SemiBold" 
                               Foreground="#2D3748"
                               Margin="0,0,0,8"/>
                        <Border Background="#F7FAFC" 
                                CornerRadius="12" 
                                BorderBrush="#E2E8F0" 
                                BorderThickness="1"
                                x:Name="PasswordBorder">
                            <PasswordBox x:Name="PasswordBox" 
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Padding="16,12"
                                         FontSize="16"
                                         Foreground="#2D3748"
                                         ToolTip="Nhập mật khẩu của bạn"/>
                        </Border>
                    </StackPanel>

                    <!-- Error Message -->
                    <Border x:Name="ErrorMessageBorder"
                            Background="#FED7D7" 
                            CornerRadius="8" 
                            Padding="12,8"
                            Margin="0,0,0,20"
                            Visibility="Collapsed"
                            Opacity="0">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" Opacity="0.1" BlurRadius="8" ShadowDepth="2"/>
                        </Border.Effect>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="ErrorIcon" 
                                       Text="⚠️" 
                                       FontSize="16" 
                                       Margin="0,0,8,0"
                                       VerticalAlignment="Center"/>
                            <TextBlock x:Name="ErrorMessageText" 
                                       Foreground="#C53030" 
                                       FontSize="14"
                                       FontWeight="Medium"
                                       TextWrapping="Wrap"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Login Button -->
                    <Button x:Name="LoginButton"
                            Content="Sign In"
                            Click="LoginButton_Click"
                            Height="56"
                            FontSize="18"
                            FontWeight="SemiBold"
                            Background="#667eea"
                            Foreground="White"
                            BorderThickness="0"
                            Margin="0,0,0,20">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="12"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    BorderBrush="{TemplateBinding BorderBrush}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#5a67d8"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#4c51bf"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Loading Indicator -->
                    <StackPanel x:Name="LoadingPanel"
                                Orientation="Horizontal" 
                                HorizontalAlignment="Center" 
                                Margin="0,0,0,20"
                                Visibility="Collapsed">
                        <Ellipse Width="20" Height="20" Fill="#667eea" Margin="0,0,10,0">
                            <Ellipse.RenderTransform>
                                <RotateTransform x:Name="LoadingRotation"/>
                            </Ellipse.RenderTransform>
                        </Ellipse>
                        <TextBlock Text="Signing in..." 
                                   Foreground="#667eea" 
                                   FontSize="16"
                                   FontWeight="Medium"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>

                <!-- Footer -->
                <Border Background="#F7FAFC" 
                        CornerRadius="12" 
                        Padding="20,15" 
                        Margin="0,20,0,0">
                    <TextBlock Text="© 2024 FUMiniHotelSystem. All rights reserved." 
                               FontSize="12" 
                               Foreground="#718096"
                               HorizontalAlignment="Center" 
                               FontWeight="Medium"/>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Window>
