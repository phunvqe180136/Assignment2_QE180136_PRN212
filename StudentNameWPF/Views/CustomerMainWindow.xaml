<Window x:Class="StudentNameWPF.Views.CustomerMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FUMiniHotelSystem - Customer Dashboard" 
        Height="700" 
        Width="1200"
        Style="{StaticResource ModernWindowStyle}"
        WindowStartupLocation="CenterScreen"
        MinHeight="600"
        MinWidth="1000">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Enhanced Modern Header -->
        <Border Grid.Row="0" 
                Background="{StaticResource PrimaryColor}" 
                Padding="0">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.15" BlurRadius="20" ShadowDepth="3"/>
            </Border.Effect>
            
            <Grid Margin="30,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <Border Background="White" 
                                CornerRadius="10" 
                                Width="45" 
                                Height="45" 
                                Margin="0,0,15,0">
                            <TextBlock Text="ðŸ¨" 
                                       FontSize="22" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="FUMiniHotelSystem" 
                                       FontSize="28" 
                                       FontWeight="Bold" 
                                       Foreground="White"/>
                            <TextBlock Text="Customer Dashboard" 
                                       FontSize="16" 
                                       Foreground="White" 
                                       Opacity="0.9"
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Border Background="White" 
                            CornerRadius="10" 
                            Padding="12,8" 
                            Margin="0,0,15,0"
                            Opacity="0.15">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="32" Height="32" Fill="White" Margin="0,0,8,0"/>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Welcome," 
                                           Foreground="White" 
                                           FontSize="12" 
                                           FontWeight="Medium"/>
                                <TextBlock x:Name="WelcomeText" 
                                           Foreground="White" 
                                           FontWeight="SemiBold" 
                                           FontSize="14"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <Button Content="ðŸšª Logout" 
                            Background="Transparent" 
                            Foreground="White" 
                            BorderBrush="White" 
                            BorderThickness="2"
                            Padding="20,10"
                            FontWeight="SemiBold"
                            FontSize="14"
                            Click="LogoutButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="10"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    BorderBrush="{TemplateBinding BorderBrush}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="White"/>
                                                    <Setter Property="Foreground" Value="{StaticResource PrimaryColor}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Enhanced Main Content -->
        <TabControl Grid.Row="1" 
                    Margin="30" 
                    Background="Transparent"
                    BorderThickness="0">
            
            <!-- Enhanced Profile Management Tab -->
            <TabItem Header="ðŸ‘¤ My Profile">
                <TabItem.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="10,8">
                            <TextBlock Text="ðŸ‘¤" FontSize="18" Margin="0,0,10,0"/>
                            <TextBlock Text="My Profile" FontWeight="SemiBold" FontSize="14"/>
                        </StackPanel>
                    </DataTemplate>
                </TabItem.HeaderTemplate>
                
                <Border Background="White" 
                        CornerRadius="16" 
                        Padding="40"
                        Effect="{StaticResource CardShadow}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Enhanced Profile Actions -->
                        <Border Grid.Row="0" 
                                Background="#F7FAFC" 
                                CornerRadius="12" 
                                Padding="20" 
                                Margin="0,0,0,25"
                                BorderBrush="#E2E8F0"
                                BorderThickness="1">
                            <StackPanel Orientation="Horizontal">
                                <Button Content="âœï¸ Edit Profile" 
                                        Click="EditProfile_Click"
                                        Margin="0,0,15,0"
                                        Style="{StaticResource PrimaryButtonStyle}"
                                        Padding="20,12"/>
                                <Button Content="ðŸ”„ Refresh" 
                                        Click="RefreshProfile_Click"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Padding="20,12"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Enhanced Profile Information -->
                        <Border Grid.Row="1" 
                                Background="White" 
                                BorderBrush="#E2E8F0" 
                                BorderThickness="1" 
                                CornerRadius="12" 
                                Padding="30"
                                Effect="{StaticResource CardShadow}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="220"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <Border Background="#F7FAFC" 
                                            CornerRadius="12" 
                                            Padding="20" 
                                            Margin="0,0,0,15">
                                        <StackPanel>
                                            <TextBlock Text="ðŸ‘¤" 
                                                       FontSize="64" 
                                                       HorizontalAlignment="Center" 
                                                       Margin="0,0,0,10"/>
                                            <TextBlock Text="Profile Picture" 
                                                       HorizontalAlignment="Center" 
                                                       FontSize="14" 
                                                       Foreground="#718096"
                                                       FontWeight="Medium"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1" Margin="30,0,0,0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="180"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <Label Grid.Row="0" Grid.Column="0" 
                                               Content="Full Name:" 
                                               Style="{StaticResource ModernLabelStyle}"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1" 
                                                   x:Name="ProfileFullName" 
                                                   Text="Loading..." 
                                                   Margin="0,0,0,15"
                                                   FontSize="14"
                                                   Foreground="#2D3748"/>
                                        
                                        <Label Grid.Row="1" Grid.Column="0" 
                                               Content="Email:" 
                                               Style="{StaticResource ModernLabelStyle}"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" 
                                                   x:Name="ProfileEmail" 
                                                   Text="Loading..." 
                                                   Margin="0,0,0,15"
                                                   FontSize="14"
                                                   Foreground="#2D3748"/>
                                        
                                        <Label Grid.Row="2" Grid.Column="0" 
                                               Content="Telephone:" 
                                               Style="{StaticResource ModernLabelStyle}"/>
                                        <TextBlock Grid.Row="2" Grid.Column="1" 
                                                   x:Name="ProfileTelephone" 
                                                   Text="Loading..." 
                                                   Margin="0,0,0,15"
                                                   FontSize="14"
                                                   Foreground="#2D3748"/>
                                        
                                        <Label Grid.Row="3" Grid.Column="0" 
                                               Content="Birthday:" 
                                               Style="{StaticResource ModernLabelStyle}"/>
                                        <TextBlock Grid.Row="3" Grid.Column="1" 
                                                   x:Name="ProfileBirthday" 
                                                   Text="Loading..." 
                                                   Margin="0,0,0,15"
                                                   FontSize="14"
                                                   Foreground="#2D3748"/>
                                        
                                        <Label Grid.Row="4" Grid.Column="0" 
                                               Content="Status:" 
                                               Style="{StaticResource ModernLabelStyle}"/>
                                        <TextBlock Grid.Row="4" Grid.Column="1" 
                                                   x:Name="ProfileStatus" 
                                                   Text="Loading..." 
                                                   Margin="0,0,0,15"
                                                   FontSize="14"
                                                   Foreground="#2D3748"/>
                                        
                                        <Label Grid.Row="5" Grid.Column="0" 
                                               Content="Member Since:" 
                                               Style="{StaticResource ModernLabelStyle}"/>
                                        <TextBlock Grid.Row="5" Grid.Column="1" 
                                                   x:Name="ProfileMemberSince" 
                                                   Text="Loading..."
                                                   FontSize="14"
                                                   Foreground="#2D3748"/>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
            </TabItem>
            
            <!-- Enhanced Booking History Tab -->
            <TabItem Header="ðŸ“… Booking History">
                <TabItem.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="10,8">
                            <TextBlock Text="ðŸ“…" FontSize="18" Margin="0,0,10,0"/>
                            <TextBlock Text="Booking History" FontWeight="SemiBold" FontSize="14"/>
                        </StackPanel>
                    </DataTemplate>
                </TabItem.HeaderTemplate>
                
                <Border Background="White" 
                        CornerRadius="16" 
                        Padding="40"
                        Effect="{StaticResource CardShadow}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Enhanced Booking Actions -->
                        <Border Grid.Row="0" 
                                Background="#F7FAFC" 
                                CornerRadius="12" 
                                Padding="20" 
                                Margin="0,0,0,25"
                                BorderBrush="#E2E8F0"
                                BorderThickness="1">
                            <StackPanel Orientation="Horizontal">
                                <Button Content="âž• New Booking" 
                                        Click="NewBooking_Click"
                                        Margin="0,0,15,0"
                                        Style="{StaticResource PrimaryButtonStyle}"
                                        Padding="20,12"/>
                                <Button Content="ðŸ”„ Refresh" 
                                        Click="RefreshBookings_Click"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Padding="20,12"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Enhanced Booking History -->
                        <Border Grid.Row="1" 
                                Background="White" 
                                CornerRadius="12" 
                                BorderBrush="#E2E8F0" 
                                BorderThickness="1"
                                Effect="{StaticResource CardShadow}">
                            <DataGrid x:Name="BookingHistoryGrid"
                                      AutoGenerateColumns="False"
                                      CanUserSortColumns="True"
                                      Style="{StaticResource ModernDataGridStyle}">
                                <DataGrid.ColumnHeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="#F7FAFC"/>
                                        <Setter Property="Foreground" Value="#2D3748"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Padding" Value="16,12"/>
                                        <Setter Property="BorderBrush" Value="#E2E8F0"/>
                                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                        <Setter Property="FontSize" Value="13"/>
                                    </Style>
                                </DataGrid.ColumnHeaderStyle>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Booking ID" Binding="{Binding BookingID}" Width="100"/>
                                    <DataGridTextColumn Header="Room Number" Binding="{Binding RoomNumber}" Width="120"/>
                                    <DataGridTextColumn Header="Check In" Binding="{Binding CheckInDate, StringFormat=yyyy-MM-dd}" Width="120"/>
                                    <DataGridTextColumn Header="Check Out" Binding="{Binding CheckOutDate, StringFormat=yyyy-MM-dd}" Width="120"/>
                                    <DataGridTextColumn Header="Total Amount" Binding="{Binding TotalAmount, StringFormat=C}" Width="140"/>
                                    <DataGridTextColumn Header="Status" Binding="{Binding BookingStatus}" Width="120"/>
                                    <DataGridTextColumn Header="Booking Date" Binding="{Binding BookingDate, StringFormat=yyyy-MM-dd}" Width="140"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Border>
                    </Grid>
                </Border>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
