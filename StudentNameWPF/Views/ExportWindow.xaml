<Window x:Class="StudentNameWPF.Views.ExportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Export Data" 
        Height="600" 
        Width="800"
        Style="{StaticResource ModernWindowStyle}"
        WindowStartupLocation="CenterOwner">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="ðŸ“Š Export Data" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="{StaticResource PrimaryColor}"/>
            <TextBlock Text="Export hotel data to various formats" 
                       FontSize="14" 
                       Foreground="{StaticResource TextColor}" 
                       Opacity="0.7"/>
        </StackPanel>
        
        <!-- Export Options -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Data Selection -->
            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                <TextBlock Text="Select Data to Export" 
                           FontSize="16" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,15"/>
                
                <CheckBox x:Name="ExportCustomersCheckBox" 
                          Content="Customers" 
                          IsChecked="True" 
                          Margin="0,0,0,10"/>
                <CheckBox x:Name="ExportRoomsCheckBox" 
                          Content="Rooms" 
                          IsChecked="True" 
                          Margin="0,0,0,10"/>
                <CheckBox x:Name="ExportBookingsCheckBox" 
                          Content="Bookings" 
                          IsChecked="True" 
                          Margin="0,0,0,10"/>
                <CheckBox x:Name="ExportRoomTypesCheckBox" 
                          Content="Room Types" 
                          IsChecked="True" 
                          Margin="0,0,0,20"/>
                
                <TextBlock Text="Date Range (for Bookings)" 
                           FontSize="14" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,10"/>
                
                <Label Content="From Date" Style="{StaticResource ModernLabelStyle}"/>
                <DatePicker x:Name="FromDatePicker" 
                            Margin="0,0,0,10"/>
                
                <Label Content="To Date" Style="{StaticResource ModernLabelStyle}"/>
                <DatePicker x:Name="ToDatePicker" 
                            Margin="0,0,0,20"/>
            </StackPanel>
            
            <!-- Export Format -->
            <StackPanel Grid.Column="1">
                <TextBlock Text="Export Format" 
                           FontSize="16" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,15"/>
                
                <RadioButton x:Name="ExcelFormatRadio" 
                             Content="Excel (.xlsx)" 
                             IsChecked="True" 
                             Margin="0,0,0,10"/>
                <RadioButton x:Name="CsvFormatRadio" 
                             Content="CSV (.csv)" 
                             Margin="0,0,0,10"/>
                <RadioButton x:Name="JsonFormatRadio" 
                             Content="JSON (.json)" 
                             Margin="0,0,0,10"/>
                <RadioButton x:Name="PdfFormatRadio" 
                             Content="PDF Report (.pdf)" 
                             Margin="0,0,0,20"/>
                
                <TextBlock Text="Export Options" 
                           FontSize="14" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,10"/>
                
                <CheckBox x:Name="IncludeHeadersCheckBox" 
                          Content="Include Headers" 
                          IsChecked="True" 
                          Margin="0,0,0,10"/>
                <CheckBox x:Name="FormatDatesCheckBox" 
                          Content="Format Dates" 
                          IsChecked="True" 
                          Margin="0,0,0,10"/>
                <CheckBox x:Name="IncludeInactiveCheckBox" 
                          Content="Include Inactive Records" 
                          Margin="0,0,0,20"/>
                
                <TextBlock Text="File Location" 
                           FontSize="14" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,10"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox x:Name="FilePathTextBox" 
                             Text="{Binding FilePath}" 
                             Style="{StaticResource ModernTextBoxStyle}" 
                             Grid.Column="0" 
                             Margin="0,0,10,0"/>
                    <Button Content="Browse" 
                            Click="BrowseButton_Click" 
                            Style="{StaticResource SecondaryButtonStyle}" 
                            Grid.Column="1"/>
                </Grid>
            </StackPanel>
        </Grid>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Content="Cancel" 
                    Click="CancelButton_Click" 
                    Style="{StaticResource SecondaryButtonStyle}" 
                    Margin="0,0,10,0"/>
            <Button Content="Export" 
                    Click="ExportButton_Click" 
                    Style="{StaticResource PrimaryButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>
