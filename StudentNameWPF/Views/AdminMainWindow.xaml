<Window x:Class="StudentNameWPF.Views.AdminMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FUMiniHotelSystem - Admin Dashboard" 
        Height="700" 
        Width="1200"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource ModernWindowStyle}"
        Background="#F8FAFC"
        MinHeight="800"
        MinWidth="1200">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Enhanced Modern Header -->
        <Border Grid.Row="0" 
                Background="White" 
                Padding="0">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.12" BlurRadius="25" ShadowDepth="3"/>
            </Border.Effect>
            
            <Grid Margin="40,25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <Border Background="{StaticResource PrimaryColor}" 
                                CornerRadius="12" 
                                Width="50" 
                                Height="50" 
                                Margin="0,0,20,0">
                            <TextBlock Text="ðŸ¨" 
                                       FontSize="24" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="FUMiniHotelSystem" 
                                       FontSize="32" 
                                       FontWeight="Bold" 
                                       Foreground="#1A202C"/>
                            <TextBlock Text="Admin Dashboard" 
                                       FontSize="16" 
                                       Foreground="#718096" 
                                       FontWeight="Medium"
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Border Background="#F7FAFC" 
                            CornerRadius="12" 
                            Padding="16,12" 
                            Margin="0,0,20,0"
                            BorderBrush="#E2E8F0"
                            BorderThickness="1">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="36" Height="36" Fill="{StaticResource PrimaryColor}" Margin="0,0,12,0"/>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Welcome," 
                                           Foreground="#718096" 
                                           FontSize="13" 
                                           FontWeight="Medium"/>
                                <TextBlock x:Name="WelcomeText" 
                                           Foreground="#2D3748" 
                                           FontWeight="SemiBold" 
                                           FontSize="15"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <Button Content="ðŸšª Logout" 
                            Style="{StaticResource DangerButtonStyle}"
                            Padding="24,12"
                            FontSize="14"
                            Click="LogoutButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content with modern tabs -->
        <TabControl Grid.Row="1" 
                    Margin="30,20,30,30" 
                    Background="Transparent"
                    BorderThickness="0">
            
            <!-- Customer Management Tab -->
            <TabItem Header="ðŸ‘¥ Customer Management" x:Name="CustomerTab">
                <TabItem.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ‘¥" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Customer Management" FontWeight="SemiBold"/>
                        </StackPanel>
                    </DataTemplate>
                </TabItem.HeaderTemplate>
                
                <Border Background="White" 
                        CornerRadius="12" 
                        Padding="30"
                        Effect="{StaticResource CardShadow}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Search and Actions -->
                        <Border Grid.Row="0" 
                                Background="#F7FAFC" 
                                CornerRadius="8" 
                                Padding="20" 
                                Margin="0,0,0,20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                    <Border Background="White" 
                                            CornerRadius="8" 
                                            BorderBrush="#E2E8F0" 
                                            BorderThickness="1" 
                                            Margin="0,0,15,0">
                                        <TextBox x:Name="CustomerSearchBox" 
                                                 Width="300"
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 Padding="12,8"
                                                 FontSize="14"/>
                                    </Border>
                                    <Button Content="ðŸ” Search" 
                                            x:Name="CustomerSearchButton"
                                            Margin="0,0,10,0"
                                            Padding="15,8"
                                            Background="#667eea"
                                            Foreground="White"
                                            BorderThickness="0"
                                            FontWeight="SemiBold"/>
                                    <Button Content="ðŸ”„ Refresh" 
                                            x:Name="CustomerRefreshButton"
                                            Padding="15,8"
                                            Background="#48BB78"
                                            Foreground="White"
                                            BorderThickness="0"
                                            FontWeight="SemiBold"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <Button Content="âž• Add Customer" 
                                            x:Name="AddCustomerButton"
                                            Margin="0,0,10,0"
                                            Padding="20,10"
                                            Background="#667eea"
                                            Foreground="White"
                                            BorderThickness="0"
                                            FontWeight="SemiBold"/>
                                    <Button Content="âœï¸ Edit" 
                                            x:Name="EditCustomerButton"
                                            Margin="0,0,10,0"
                                            Padding="20,10"
                                            Background="#ED8936"
                                            Foreground="White"
                                            BorderThickness="0"
                                            FontWeight="SemiBold"/>
                                    <Button Content="ðŸ—‘ï¸ Delete" 
                                            x:Name="DeleteCustomerButton"
                                            Padding="20,10"
                                            Background="#E53E3E"
                                            Foreground="White"
                                            BorderThickness="0"
                                            FontWeight="SemiBold"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                        
                        <!-- Status Message -->
                        <Border Grid.Row="1" 
                                Background="#E6FFFA" 
                                CornerRadius="6" 
                                Padding="12,8" 
                                Margin="0,0,0,15">
                            <TextBlock x:Name="CustomerStatusMessage"
                                       Foreground="#234E52" 
                                       FontSize="14"
                                       FontWeight="Medium"/>
                        </Border>
                        
                        <!-- Customer DataGrid -->
                        <Border Grid.Row="2" 
                                Background="White" 
                                CornerRadius="8" 
                                BorderBrush="#E2E8F0" 
                                BorderThickness="1">
                            <DataGrid x:Name="CustomerDataGrid"
                                      AutoGenerateColumns="False"
                                      CanUserSortColumns="True"
                                      SelectedItem="{Binding SelectedCustomer, Mode=TwoWay}"
                                      Background="White"
                                      BorderThickness="0"
                                      GridLinesVisibility="Horizontal"
                                      HeadersVisibility="Column"
                                      RowHeaderWidth="0">
                                <DataGrid.ColumnHeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="#F7FAFC"/>
                                        <Setter Property="Foreground" Value="#2D3748"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Padding" Value="12,8"/>
                                        <Setter Property="BorderBrush" Value="#E2E8F0"/>
                                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                    </Style>
                                </DataGrid.ColumnHeaderStyle>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" Binding="{Binding CustomerID}" Width="80"/>
                                    <DataGridTextColumn Header="Full Name" Binding="{Binding CustomerFullName}" Width="200"/>
                                    <DataGridTextColumn Header="Email" Binding="{Binding EmailAddress}" Width="250"/>
                                    <DataGridTextColumn Header="Telephone" Binding="{Binding Telephone}" Width="120"/>
                                    <DataGridTextColumn Header="Birthday" Binding="{Binding CustomerBirthday}" Width="100"/>
                                    <DataGridTextColumn Header="Status" Binding="{Binding CustomerStatus}" Width="80"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Border>
                    </Grid>
                </Border>
            </TabItem>
            
            <!-- Enhanced Room Management Tab -->
            <TabItem Header="ðŸ¨ Room Management" x:Name="RoomTab">
                <TabItem.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="10,8">
                            <TextBlock Text="ðŸ¨" FontSize="18" Margin="0,0,10,0"/>
                            <TextBlock Text="Room Management" FontWeight="SemiBold" FontSize="14"/>
                        </StackPanel>
                    </DataTemplate>
                </TabItem.HeaderTemplate>
                
                <Border Background="White" 
                        CornerRadius="16" 
                        Padding="40"
                        Effect="{StaticResource CardShadow}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Enhanced Search and Actions -->
                        <Border Grid.Row="0" 
                                Background="#F7FAFC" 
                                CornerRadius="12" 
                                Padding="25" 
                                Margin="0,0,0,25"
                                BorderBrush="#E2E8F0"
                                BorderThickness="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                    <Border Background="White" 
                                            CornerRadius="10" 
                                            BorderBrush="#E2E8F0" 
                                            BorderThickness="1" 
                                            Margin="0,0,15,0">
                                        <TextBox x:Name="RoomSearchBox" 
                                                 Width="250"
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 Padding="16,12"
                                                 FontSize="14"
                                                 Style="{StaticResource ModernTextBoxStyle}"/>
                                    </Border>
                                    <ComboBox x:Name="RoomTypeFilter" 
                                              DisplayMemberPath="RoomTypeName"
                                              Width="180"
                                              Margin="0,0,15,0"
                                              Style="{StaticResource ModernComboBoxStyle}"/>
                                    <Button Content="ðŸ” Search" 
                                            x:Name="RoomSearchButton"
                                            Margin="0,0,10,0"
                                            Style="{StaticResource PrimaryButtonStyle}"
                                            Padding="20,12"/>
                                    <Button Content="ðŸ”§ Filter by Type" 
                                            x:Name="FilterByTypeButton"
                                            Margin="0,0,10,0"
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Padding="20,12"/>
                                    <Button Content="ðŸ”„ Refresh" 
                                            x:Name="RoomRefreshButton"
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Padding="20,12"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <Button Content="âž• Add Room" 
                                            x:Name="AddRoomButton"
                                            Margin="0,0,15,0"
                                            Style="{StaticResource PrimaryButtonStyle}"
                                            Padding="24,12"/>
                                    <Button Content="âœï¸ Edit Room" 
                                            x:Name="EditRoomButton"
                                            Margin="0,0,15,0"
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Padding="24,12"/>
                                    <Button Content="ðŸ—‘ï¸ Delete Room" 
                                            x:Name="DeleteRoomButton"
                                            Style="{StaticResource DangerButtonStyle}"
                                            Padding="24,12"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                        
                        <!-- Enhanced Status Message -->
                        <Border Grid.Row="1" 
                                Background="#E6FFFA" 
                                CornerRadius="8" 
                                Padding="16,12" 
                                Margin="0,0,0,20"
                                BorderBrush="#38B2AC"
                                BorderThickness="1">
                            <TextBlock x:Name="RoomStatusMessage"
                                       Foreground="#234E52" 
                                       FontSize="14"
                                       FontWeight="Medium"/>
                        </Border>
                        
                        <!-- Enhanced Room DataGrid -->
                        <Border Grid.Row="2" 
                                Background="White" 
                                CornerRadius="12" 
                                BorderBrush="#E2E8F0" 
                                BorderThickness="1"
                                Effect="{StaticResource CardShadow}">
                            <DataGrid x:Name="RoomDataGrid"
                                      AutoGenerateColumns="False"
                                      CanUserSortColumns="True"
                                      SelectedItem="{Binding SelectedRoom, Mode=TwoWay}"
                                      Style="{StaticResource ModernDataGridStyle}">
                                <DataGrid.ColumnHeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="#F7FAFC"/>
                                        <Setter Property="Foreground" Value="#2D3748"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Padding" Value="16,12"/>
                                        <Setter Property="BorderBrush" Value="#E2E8F0"/>
                                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                        <Setter Property="FontSize" Value="13"/>
                                    </Style>
                                </DataGrid.ColumnHeaderStyle>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" Binding="{Binding RoomID}" Width="80"/>
                                    <DataGridTextColumn Header="Room Number" Binding="{Binding RoomNumber}" Width="120"/>
                                    <DataGridTextColumn Header="Description" Binding="{Binding RoomDescription}" Width="250"/>
                                    <DataGridTextColumn Header="Max Capacity" Binding="{Binding RoomMaxCapacity}" Width="120"/>
                                    <DataGridTextColumn Header="Price/Day" Binding="{Binding RoomPricePerDate}" Width="120"/>
                                    <DataGridTextColumn Header="Room Type" Binding="{Binding RoomTypeID}" Width="140"/>
                                    <DataGridTextColumn Header="Status" Binding="{Binding RoomStatus}" Width="100"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Border>
                    </Grid>
                </Border>
            </TabItem>
            
            <!-- Enhanced Reports Tab -->
            <TabItem Header="ðŸ“Š Reports">
                <TabItem.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="10,8">
                            <TextBlock Text="ðŸ“Š" FontSize="18" Margin="0,0,10,0"/>
                            <TextBlock Text="Reports" FontWeight="SemiBold" FontSize="14"/>
                        </StackPanel>
                    </DataTemplate>
                </TabItem.HeaderTemplate>
                
                <Border Background="White" 
                        CornerRadius="16" 
                        Padding="40"
                        Effect="{StaticResource CardShadow}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Enhanced Quick Actions Panel -->
                        <Border Grid.Column="0" 
                                Background="#F7FAFC" 
                                CornerRadius="12" 
                                Padding="30" 
                                Margin="0,0,20,0"
                                BorderBrush="#E2E8F0"
                                BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="ðŸ“ˆ Quick Actions" 
                                           FontSize="18" 
                                           FontWeight="Bold" 
                                           Foreground="#2D3748"
                                           Margin="0,0,0,20"/>
                                
                                <Button Content="ðŸ“Š Dashboard Overview" 
                                        Click="OpenDashboard_Click"
                                        Style="{StaticResource PrimaryButtonStyle}"
                                        Padding="20,12"
                                        Margin="0,0,0,20"/>
                                
                                <TextBlock Text="ðŸ“… Quick Report Filters" 
                                           FontSize="16" 
                                           FontWeight="SemiBold" 
                                           Foreground="#2D3748"
                                           Margin="0,0,0,15"/>
                                
                                <Label Content="Start Date" Style="{StaticResource ModernLabelStyle}"/>
                                <DatePicker x:Name="StartDatePicker" 
                                            Margin="0,0,0,15"/>
                                
                                <Label Content="End Date" Style="{StaticResource ModernLabelStyle}"/>
                                <DatePicker x:Name="EndDatePicker" 
                                            Margin="0,0,0,20"/>
                                
                                <Button Content="ðŸ“‹ Generate Quick Report" 
                                        Click="GenerateReport_Click"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Padding="20,12"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Enhanced Report Results Panel -->
                        <Border Grid.Column="1" 
                                Background="#F7FAFC" 
                                CornerRadius="12" 
                                Padding="30"
                                BorderBrush="#E2E8F0"
                                BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="ðŸ“‹ Quick Report Results" 
                                           FontSize="18" 
                                           FontWeight="Bold" 
                                           Foreground="#2D3748"
                                           Margin="0,0,0,20"/>
                                
                                <Border Background="White" 
                                        CornerRadius="12" 
                                        BorderBrush="#E2E8F0" 
                                        BorderThickness="1"
                                        Effect="{StaticResource CardShadow}">
                                    <DataGrid x:Name="ReportDataGrid" 
                                              AutoGenerateColumns="True"
                                              Height="400"
                                              Style="{StaticResource ModernDataGridStyle}">
                                        <DataGrid.ColumnHeaderStyle>
                                            <Style TargetType="DataGridColumnHeader">
                                                <Setter Property="Background" Value="#F7FAFC"/>
                                                <Setter Property="Foreground" Value="#2D3748"/>
                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                                <Setter Property="Padding" Value="16,12"/>
                                                <Setter Property="BorderBrush" Value="#E2E8F0"/>
                                                <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                                <Setter Property="FontSize" Value="13"/>
                                            </Style>
                                        </DataGrid.ColumnHeaderStyle>
                                    </DataGrid>
                                </Border>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
